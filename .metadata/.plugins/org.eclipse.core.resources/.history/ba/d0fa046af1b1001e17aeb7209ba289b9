package jComboBox;

import javax.swing.JFrame;

import java.awt.Window;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JComboBox;

public class JComboBox {

    public JComboBox(String[] arr) {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
        JFrame frame = new JFrame();
        String[] arr = {"C", "C++", "Java", "Python"};

        JComboBox cb = new JComboBox(arr);
       cb.setBounds(50, 100, 90, 20);
        frame.add(cb);
        
        
        JButton btn=new JButton();
		btn.setText("Send");
		btn.setBounds(50, 150, 80, 20);
		frame.add(btn);
		
		btn.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				String text="Der ausgewählte Text: "+ cb.getSelectedItem();
				//String textString="Der ausgewählte Text: "+ cb.getItemAt(cb.getSelectedItem());
				String textIndex="Der ausgewählte Text: "+ cb.getItemAt(2);
				
				System.out.println(text);
				System.out.println(textIndex);
			}
			
		});

        frame.setSize(500, 500);
        frame.setLayout(null);
        frame.setVisible(true);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }

	protected String getItemAt(int i) {
		// TODO Auto-generated method stub
		return null;
	}

	protected String getItemAt(String selectedItem) {
		// TODO Auto-generated method stub
		return null;
	}

	protected String getSelectedItem() {
		// TODO Auto-generated method stub
		return null;
	}
}
