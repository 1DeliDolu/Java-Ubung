package zusatzAufgabe;

public class Uhrzeit {
	private String uhrzeit;
	private int stunde;
	private int minute;
	private int sekunde;
	

	


	/**
	 * @param stunde
	 * @param minute
	 * @param sekunde
	 */
	public Uhrzeit(int stunde, int minute, int sekunde) {
		super();
		this.stunde = stunde;
		this.minute = minute;
		this.sekunde = sekunde;
	}
public String addSeconds(int sec) {
	this.sekunde+=sec;
	int gesamtSek= this.stunde*3600+this.minute*60+this.sekunde;
	this.stunde=gesamtSek%3600;
	this.minute=this.stunde%60;
	this.sekunde=this.minute;
		
	
	return this.uhrzeit=stunde + ":" + minute + ":" + sekunde+" p.m";
	}
public String uhrzeit() {
	
	
	
	return uhrzeit;
	
}


	@Override
public String toString() {
		if (stunde<12) {
			uhrzeit=stunde + ":" + minute + ":" + sekunde+"p.m";
			
		}else {
			uhrzeit=stunde + ":" + minute + ":" + sekunde+"a.m";
			
		}
	return uhrzeit;
}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Uhrzeit u1=new Uhrzeit(0,0,0);
		System.out.println(u1.addSeconds(34));

	}

}
